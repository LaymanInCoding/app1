<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3">
    <include layout="@layout/common_toolbar" />
    <include layout="@layout/line_h_color_e5" />
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/color_white"
        android:paddingLeft="@dimen/dimen_30_dip"
        android:paddingRight="@dimen/dimen_30_dip"
        android:layout_height="@dimen/dimen_90_dip">
        <TextView
            android:text="@string/pay_hint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#555555"
            android:textSize="@dimen/dimen_26_dip"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <include layout="@layout/line_h_color_e5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_white"
        android:layout_marginTop="@dimen/dimen_10_dip">
        <LinearLayout
            android:paddingLeft="@dimen/dimen_30_dip"
            android:paddingRight="@dimen/dimen_30_dip"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80_dip">
            <TextView
                android:text="@string/pay_way_hint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#555555"
                android:textSize="@dimen/dimen_26_dip"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <include layout="@layout/line_h_color_e5" />
        <RelativeLayout
            android:id="@+id/zfb_container"
            android:paddingLeft="@dimen/dimen_30_dip"
            android:paddingRight="@dimen/dimen_30_dip"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80_dip">
            <ImageView
                android:id="@+id/zfb"
                android:src="@mipmap/zfb"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_toRightOf="@+id/zfb"
                android:layout_marginLeft="@dimen/dimen_20_dip"
                android:text="@string/pay_way_ali"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#555555"
                android:textSize="@dimen/dimen_26_dip"
                android:gravity="center_vertical"/>
            <ImageView
                android:id="@+id/zfb_checked_img"
                android:src="@mipmap/pay_selected"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <include layout="@layout/line_h_color_e5" />
        <RelativeLayout
            android:id="@+id/wx_container"
            android:paddingLeft="@dimen/dimen_30_dip"
            android:paddingRight="@dimen/dimen_30_dip"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80_dip">
            <ImageView
                android:id="@+id/wx"
                android:src="@mipmap/weix"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_toRightOf="@+id/wx"
                android:layout_marginLeft="@dimen/dimen_16_dip"
                android:text="@string/pay_way_wx"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#555555"
                android:textSize="@dimen/dimen_26_dip"
                android:gravity="center_vertical"/>
            <ImageView
                android:id="@+id/wx_checked_img"
                android:src="@mipmap/pay_normal"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <include layout="@layout/line_h_color_e5" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">
        <RelativeLayout
            android:background="@color/color_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_90_dip">
            <TextView
                android:id="@+id/order_amount_hint"
                android:paddingLeft="@dimen/dimen_30_dip"
                android:layout_centerVertical="true"
                android:text="应付金额:"
                android:textColor="#555555"
                android:textSize="@dimen/dimen_26_dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/order_amount"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_10_dip"
                android:layout_toRightOf="@+id/order_amount_hint"
                android:layout_width="wrap_content"
                android:textColor="#555555"
                android:textSize="@dimen/dimen_26_dip"
                android:layout_height="wrap_content" />
            <include layout="@layout/line_h_color_e5" />
            <Button
                android:id="@+id/confirm_btn"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/dimen_30_dip"
                android:textColor="@color/color_white"
                android:paddingLeft="@dimen/dimen_80_dip"
                android:paddingRight="@dimen/dimen_80_dip"
                android:text="@string/pay_btn_hint"
                android:background="#cd463c"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>