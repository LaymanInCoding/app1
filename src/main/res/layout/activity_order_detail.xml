<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3">
    <LinearLayout
        android:id="@+id/toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/common_toolbar" />
        <include layout="@layout/line_h_color_e5" />
    </LinearLayout>
    <ScrollView
        android:layout_below="@+id/toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/color_white"
                    android:paddingTop="@dimen/dimen_28_dip"
                    android:paddingLeft="@dimen/dimen_54_dip"
                    android:gravity="center_vertical"
                    android:paddingRight="@dimen/dimen_54_dip">
                    <ImageView
                        android:src="@mipmap/dingwei"
                        android:layout_width="@dimen/dimen_22_dip"
                        android:layout_height="@dimen/dimen_25_dip" />
                    <TextView
                        android:layout_marginLeft="@dimen/dimen_20_dip"
                        android:text="@string/order_detail_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#555555"
                        android:textSize="@dimen/dimen_24_dip"/>
                    <TextView
                        android:layout_marginLeft="@dimen/dimen_6_dip"
                        android:id="@+id/order_detail_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#555555"
                        android:textSize="@dimen/dimen_24_dip"/>
                    <TextView
                        android:layout_marginLeft="@dimen/dimen_70_dip"
                        android:id="@+id/order_detail_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#555555"
                        android:textSize="@dimen/dimen_24_dip"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white"
                    android:paddingTop="@dimen/dimen_22_dip"
                    android:orientation="horizontal"
                    android:gravity="top"
                    android:paddingBottom="@dimen/dimen_22_dip"
                    android:paddingLeft="@dimen/dimen_54_dip"
                    android:paddingRight="@dimen/dimen_54_dip">
                    <TextView
                        android:layout_marginLeft="@dimen/dimen_42_dip"
                        android:text="@string/order_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#555555"
                        android:textSize="@dimen/dimen_24_dip"/>
                    <TextView
                        android:layout_marginLeft="@dimen/dimen_6_dip"
                        android:id="@+id/order_address"
                        android:maxLines="2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#555555"
                        android:textSize="@dimen/dimen_24_dip"/>
                </LinearLayout>
                <include layout="@layout/line_h_color_e5" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dimen_10_dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/color_white"
                android:paddingTop="@dimen/dimen_32_dip">
                <LinearLayout
                    android:paddingLeft="@dimen/dimen_34_dip"
                    android:paddingRight="@dimen/dimen_34_dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginLeft="@dimen/dimen_20_dip"
                        android:text="@string/order_detail_order_sn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#444444"
                        android:textSize="@dimen/dimen_24_dip"/>
                    <TextView
                        android:layout_marginLeft="@dimen/dimen_6_dip"
                        android:id="@+id/order_sn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#444444"
                        android:textSize="@dimen/dimen_24_dip"/>
                </LinearLayout>
                <LinearLayout
                    android:paddingLeft="@dimen/dimen_34_dip"
                    android:paddingRight="@dimen/dimen_34_dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16_dip"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginLeft="@dimen/dimen_20_dip"
                        android:text="@string/order_add_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#444444"
                        android:textSize="@dimen/dimen_24_dip"/>
                    <TextView
                        android:layout_marginLeft="@dimen/dimen_6_dip"
                        android:id="@+id/order_add_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#444444"
                        android:textSize="@dimen/dimen_24_dip"/>
                </LinearLayout>
                <LinearLayout
                    android:paddingLeft="@dimen/dimen_34_dip"
                    android:paddingRight="@dimen/dimen_34_dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16_dip"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginLeft="@dimen/dimen_20_dip"
                        android:text="@string/order_pay_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#444444"
                        android:textSize="@dimen/dimen_24_dip"/>
                    <TextView
                        android:layout_marginLeft="@dimen/dimen_6_dip"
                        android:id="@+id/order_pay_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#444444"
                        android:textSize="@dimen/dimen_24_dip"/>
                </LinearLayout>
                <LinearLayout
                    android:paddingLeft="@dimen/dimen_34_dip"
                    android:paddingRight="@dimen/dimen_34_dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16_dip"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginLeft="@dimen/dimen_20_dip"
                        android:text="@string/order_shipping_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#444444"
                        android:textSize="@dimen/dimen_24_dip"/>
                    <TextView
                        android:layout_marginLeft="@dimen/dimen_6_dip"
                        android:id="@+id/order_shipping_fee"
                        android:layout_width="match_parent"
                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:textColor="#444444"
                        android:textSize="@dimen/dimen_24_dip"/>
                </LinearLayout>
                <LinearLayout
                    android:paddingLeft="@dimen/dimen_34_dip"
                    android:paddingRight="@dimen/dimen_34_dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16_dip"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginLeft="@dimen/dimen_20_dip"
                        android:text="@string/order_goods_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#444444"
                        android:textSize="@dimen/dimen_24_dip"/>
                    <TextView
                        android:layout_marginLeft="@dimen/dimen_6_dip"
                        android:id="@+id/order_goods_amount"
                        android:layout_width="match_parent"
                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:textColor="#444444"
                        android:textSize="@dimen/dimen_24_dip"/>
                </LinearLayout>
                <LinearLayout
                    android:paddingLeft="@dimen/dimen_34_dip"
                    android:paddingRight="@dimen/dimen_34_dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16_dip"
                    android:paddingBottom="@dimen/dimen_32_dip"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginLeft="@dimen/dimen_20_dip"
                        android:text="@string/order_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#444444"
                        android:textSize="@dimen/dimen_24_dip"/>
                    <TextView
                        android:layout_marginLeft="@dimen/dimen_6_dip"
                        android:id="@+id/order_amount"
                        android:layout_width="match_parent"
                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:textColor="#fb5151"
                        android:textSize="@dimen/dimen_24_dip"/>
                </LinearLayout>
                <include layout="@layout/line_h_color_e5" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dimen_10_dip"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/goods_container"
                android:background="@color/color_white"
                android:layout_height="wrap_content">
            </LinearLayout>
            <include layout="@layout/line_h_color_e5" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/shipping_container"
                android:layout_marginTop="@dimen/dimen_10_dip" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/color_white">
                    <LinearLayout
                        android:paddingLeft="@dimen/dimen_34_dip"
                        android:paddingRight="@dimen/dimen_34_dip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_32_dip"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_marginLeft="@dimen/dimen_20_dip"
                            android:text="@string/order_shipping_way"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#444444"
                            android:textSize="@dimen/dimen_24_dip"/>
                        <TextView
                            android:id="@+id/order_shipping_way"
                            android:layout_marginLeft="@dimen/dimen_6_dip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#444444"
                            android:textSize="@dimen/dimen_24_dip"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:paddingLeft="@dimen/dimen_34_dip"
                        android:paddingRight="@dimen/dimen_34_dip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_22_dip"
                        android:paddingBottom="@dimen/dimen_28_dip">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_marginLeft="@dimen/dimen_20_dip"
                                android:text="@string/order_invoice_no"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#444444"
                                android:textSize="@dimen/dimen_24_dip"/>
                            <TextView
                                android:id="@+id/order_invoice_no"
                                android:layout_marginLeft="@dimen/dimen_6_dip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#444444"
                                android:textSize="@dimen/dimen_24_dip"/>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/invoice_btn"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingTop="@dimen/dimen_15_dip"
                    android:paddingBottom="@dimen/dimen_15_dip"
                    android:paddingLeft="@dimen/dimen_30_dip"
                    android:paddingRight="@dimen/dimen_30_dip"
                    android:layout_marginRight="@dimen/dimen_30_dip"
                    android:background="@drawable/order_detail_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看物流"/>
            </RelativeLayout>

            <include layout="@layout/line_h_color_e5" />
        </LinearLayout>
    </ScrollView>
    <include
        android:layout_below="@+id/toolbar_container"
        android:id="@+id/anim_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/loading_anim" />
</RelativeLayout>