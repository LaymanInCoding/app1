<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/index_bg1"
    android:gravity="top|center_horizontal">
    <ImageView
        android:layout_marginTop="@dimen/dimen_270_dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/mami"/>
    <Button
        android:id="@+id/login_btn"
        android:layout_width="@dimen/dimen_400_dip"
        android:background="@drawable/common_radius_transparent"
        android:text="@string/phone_login"
        android:textColor="#e92f13"
        android:textSize="@dimen/dimen_30_dip"
        android:layout_marginTop="@dimen/dimen_50_dip"
        android:layout_height="@dimen/dimen_70_dip" />
    <Button
        android:id="@+id/register_btn"
        android:layout_marginTop="@dimen/dimen_20_dip"
        android:layout_width="@dimen/dimen_400_dip"
        android:background="@drawable/common_radius_transparent"
        android:text="@string/new_user_register"
        android:textSize="@dimen/dimen_30_dip"
        android:textColor="#e92f13"
        android:layout_height="@dimen/dimen_70_dip" />
</LinearLayout>