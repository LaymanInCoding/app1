<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000"
    android:gravity="bottom|center_horizontal">

    <LinearLayout
        android:id="@+id/shadow_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/share_weixin_friend"
            android:orientation="vertical">
            <ImageView
                android:src="@mipmap/weixin_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_white"
                android:layout_marginTop="@dimen/dimen_20_dip"
                android:text="@string/share_weixin_friend"
                android:textSize="@dimen/dimen_24_dip"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/share_weixin_circle"
            android:orientation="vertical">
            <ImageView
                android:src="@mipmap/weixin_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_white"
                android:layout_marginTop="@dimen/dimen_20_dip"
                android:text="@string/share_weixin_circle"
                android:textSize="@dimen/dimen_24_dip"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/share_copy_link"
            android:orientation="vertical">
            <ImageView
                android:src="@mipmap/copy_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_white"
                android:layout_marginTop="@dimen/dimen_20_dip"
                android:text="@string/share_copy_link"
                android:textSize="@dimen/dimen_24_dip"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/share_qr_code"
            android:orientation="vertical">
            <ImageView
                android:src="@mipmap/share_qr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_white"
                android:layout_marginTop="@dimen/dimen_20_dip"
                android:text="@string/share_qr_code"
                android:textSize="@dimen/dimen_24_dip"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/share_close"
        android:layout_marginBottom="@dimen/dimen_100_dip"
        android:layout_marginTop="@dimen/dimen_80_dip"
        android:src="@mipmap/share_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>