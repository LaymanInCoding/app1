<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">
    <LinearLayout
        android:id="@+id/title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/common_toolbar" />
        <include
            layout="@layout/line_h_color_e5" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/dimen_150_dip">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/withdraw_success"/>
        <TextView
            android:id="@+id/money"
            android:layout_marginTop="@dimen/dimen_30_dip"
            android:textColor="#555555"
            android:textSize="@dimen/dimen_62_dip"
            android:layout_width="wrap_content"
            android:maxLines="1"
            android:layout_height="wrap_content" />
        <TextView
            android:text="@string/withdraw_success"
            android:layout_marginTop="@dimen/dimen_30_dip"
            android:textColor="#999999"
            android:textSize="@dimen/dimen_30_dip"
            android:layout_width="wrap_content"
            android:maxLines="1"
            android:layout_height="wrap_content" />
        <TextView
            android:text="@string/withdraw_success_hint"
            android:layout_marginTop="@dimen/dimen_20_dip"
            android:textColor="#c3c3c3"
            android:textSize="@dimen/dimen_24_dip"
            android:layout_width="wrap_content"
            android:maxLines="1"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>