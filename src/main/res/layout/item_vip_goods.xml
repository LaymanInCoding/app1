<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_310_dip"
    android:background="@color/color_white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_246_dip"
        android:paddingLeft="@dimen/dimen_30_dip"
        android:paddingRight="@dimen/dimen_30_dip"
        android:gravity="center_vertical">
        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/goods_thumb"
            android:layout_width="@dimen/dimen_200_dip"
            android:layout_height="@dimen/dimen_200_dip" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/dimen_30_dip"
            android:paddingBottom="@dimen/dimen_30_dip"
            android:layout_marginLeft="@dimen/dimen_30_dip">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:id="@+id/goods_name"
                android:textColor="#555555"
                android:lineSpacingExtra="@dimen/dimen_6_dip"
                android:textSize="@dimen/dimen_24_dip" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dimen_16_dip"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="@dimen/dimen_200_dip"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:id="@+id/goods_price"
                    android:textColor="#fb5151"
                    android:textSize="@dimen/dimen_34_dip" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="#555555"
                    android:text="@string/good_profit"
                    android:textSize="@dimen/dimen_24_dip" />
                <TextView
                    android:id="@+id/goods_profit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="#fb5151"
                    android:textSize="@dimen/dimen_24_dip" />
            </LinearLayout>
            <TextView
                android:layout_marginTop="@dimen/dimen_20_dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:id="@+id/goods_number"
                android:textColor="#555555"
                android:textSize="@dimen/dimen_24_dip" />
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/line_h_color_e5" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_61_dip"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/share_good_container"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/share_good"/>
            <TextView
                android:layout_marginLeft="@dimen/dimen_10_dip"
                android:layout_width="wrap_content"
                android:text="@string/share"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/line_h_color_e5" />
    <include layout="@layout/line_h_color_e5" />
</LinearLayout>