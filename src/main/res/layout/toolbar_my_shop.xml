<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        app:popupTheme="@style/Dark.Overlay.LightPopup"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetEnd="0dp"
        android:layout_marginLeft="@dimen/dimen_16_dip"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/back"
                android:padding="@dimen/dimen_20_dip">

                <ImageView
                    android:layout_width="@dimen/dimen_60_dip"
                    android:src="@mipmap/back_tran"
                    android:layout_centerVertical="true"
                    android:scaleType="fitCenter"
                    android:layout_height="@dimen/dimen_60_dip" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/share"
                android:layout_marginRight="@dimen/dimen_20_dip"
                android:layout_alignParentRight="true"
                android:padding="@dimen/dimen_20_dip">

                <ImageView
                    android:layout_width="@dimen/dimen_60_dip"
                    android:src="@mipmap/share_my_shop"
                    android:layout_centerVertical="true"
                    android:scaleType="fitCenter"
                    android:layout_height="@dimen/dimen_60_dip" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/preview"
                android:layout_toLeftOf="@+id/share"
                android:padding="@dimen/dimen_20_dip">

                <ImageView
                    android:layout_width="@dimen/dimen_60_dip"
                    android:src="@mipmap/shop_preview"
                    android:layout_centerVertical="true"
                    android:scaleType="fitCenter"
                    android:layout_height="@dimen/dimen_60_dip" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
</LinearLayout>