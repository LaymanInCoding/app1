<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">

    <include layout="@layout/common_toolbar" />
    <include
        layout="@layout/line_h_color_e5" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_90_dip"
        android:paddingRight="@dimen/dimen_90_dip"
        android:layout_marginTop="@dimen/dimen_70_dip"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="@dimen/dimen_110_dip"
            android:layout_height="@dimen/dimen_46_dip"
            android:textSize="@dimen/dimen_26_dip"
            android:gravity="center_vertical"
            android:text="@string/user_phone"
            android:textColor="@color/color_555"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_46_dip"
            android:layout_marginStart="@dimen/dimen_10_dip"
            android:layout_marginLeft="@dimen/dimen_10_dip"
            android:orientation="vertical">
            <EditText
                android:inputType="phone"
                android:background="@null"
                android:id="@+id/user_phone"
                android:maxLength="11"
                android:layout_marginLeft="@dimen/dimen_20_dip"
                android:layout_marginStart="@dimen/dimen_20_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40_dip"
                android:textColor="@color/color_555"
                android:textColorHint="@color/color_db"
                android:hint="@string/user_account_hint"
                android:textSize="@dimen/dimen_26_dip"/>
            <include layout="@layout/line_h_color_e5" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_90_dip"
        android:paddingRight="@dimen/dimen_90_dip"
        android:layout_marginTop="@dimen/dimen_50_dip"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/dimen_110_dip"
            android:layout_height="@dimen/dimen_46_dip"
            android:textSize="@dimen/dimen_26_dip"
            android:text="@string/user_code"
            android:gravity="center_vertical"
            android:textColor="@color/color_555"/>
        <LinearLayout
            android:layout_marginStart="@dimen/dimen_10_dip"
            android:layout_marginLeft="@dimen/dimen_10_dip"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="@dimen/dimen_46_dip"
                android:orientation="vertical">
                <EditText
                    android:background="@null"
                    android:id="@+id/user_code"
                    android:inputType="number"
                    android:layout_marginLeft="@dimen/dimen_20_dip"
                    android:layout_marginStart="@dimen/dimen_20_dip"
                    android:layout_marginRight="@dimen/dimen_20_dip"
                    android:layout_marginEnd="@dimen/dimen_20_dip"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40_dip"
                    android:textColor="@color/color_555"
                    android:textColorHint="@color/color_db"
                    android:hint="@string/user_code_hint"
                    android:textSize="@dimen/dimen_26_dip"/>
                <include layout="@layout/line_h_color_e5" />
            </LinearLayout>
            <Button
                android:layout_marginLeft="@dimen/dimen_30_dip"
                android:layout_marginStart="@dimen/dimen_30_dip"
                android:background="@drawable/button_validcode_bg"
                android:layout_width="0dip"
                android:id="@+id/get_phone_code"
                android:textColor="@color/color_ec9590"
                android:text="@string/get_phone_code"
                android:layout_height="@dimen/dimen_43_dip"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_90_dip"
        android:paddingRight="@dimen/dimen_90_dip"
        android:layout_marginTop="@dimen/dimen_50_dip"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="@dimen/dimen_110_dip"
            android:layout_height="@dimen/dimen_46_dip"
            android:textSize="@dimen/dimen_26_dip"
            android:gravity="center_vertical"
            android:text="@string/user_password"
            android:textColor="@color/color_555"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_46_dip"
            android:layout_marginStart="@dimen/dimen_10_dip"
            android:layout_marginLeft="@dimen/dimen_10_dip"
            android:orientation="vertical">
            <EditText
                android:inputType="textPassword"
                android:background="@null"
                android:id="@+id/user_password"
                android:maxLength="11"
                android:layout_marginLeft="@dimen/dimen_20_dip"
                android:layout_marginStart="@dimen/dimen_20_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40_dip"
                android:textColor="@color/color_555"
                android:textColorHint="@color/color_db"
                android:hint="@string/user_reg_password_hint"
                android:textSize="@dimen/dimen_26_dip"/>
            <include layout="@layout/line_h_color_e5" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_90_dip"
        android:paddingRight="@dimen/dimen_90_dip"
        android:layout_marginTop="@dimen/dimen_50_dip"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="@dimen/dimen_110_dip"
            android:layout_height="@dimen/dimen_46_dip"
            android:textSize="@dimen/dimen_26_dip"
            android:gravity="center_vertical"
            android:text="@string/invitation_code"
            android:textColor="@color/color_555"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_46_dip"
            android:layout_marginStart="@dimen/dimen_10_dip"
            android:layout_marginLeft="@dimen/dimen_10_dip"
            android:orientation="vertical">
            <EditText
                android:inputType="number"
                android:background="@null"
                android:id="@+id/invitation_code"
                android:maxLength="11"
                android:layout_marginLeft="@dimen/dimen_20_dip"
                android:layout_marginStart="@dimen/dimen_20_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40_dip"
                android:textColor="@color/color_555"
                android:textColorHint="@color/color_db"
                android:hint="@string/invitation_code_hint"
                android:textSize="@dimen/dimen_26_dip"/>
            <include layout="@layout/line_h_color_e5" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_90_dip"
        android:paddingRight="@dimen/dimen_90_dip"
        android:layout_marginTop="@dimen/dimen_50_dip"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="@dimen/dimen_110_dip"
            android:layout_height="@dimen/dimen_46_dip"
            android:textSize="@dimen/dimen_26_dip"
            android:gravity="center_vertical"
            android:text="@string/shop_code"
            android:textColor="@color/color_555"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_46_dip"
            android:layout_marginStart="@dimen/dimen_10_dip"
            android:layout_marginLeft="@dimen/dimen_10_dip"
            android:orientation="vertical">
            <EditText
                android:inputType="number"
                android:background="@null"
                android:id="@+id/shop_code"
                android:maxLength="11"
                android:layout_marginLeft="@dimen/dimen_20_dip"
                android:layout_marginStart="@dimen/dimen_20_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40_dip"
                android:textColor="@color/color_555"
                android:textColorHint="@color/color_db"
                android:hint="@string/shop_code_hint"
                android:textSize="@dimen/dimen_26_dip"/>
            <include layout="@layout/line_h_color_e5" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_90_dip"
        android:paddingRight="@dimen/dimen_90_dip"
        android:layout_marginTop="@dimen/dimen_10_dip"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_46_dip"
            android:layout_marginStart="@dimen/dimen_120_dip"
            android:layout_marginLeft="@dimen/dimen_120_dip"
            android:orientation="vertical">
            <TextView
                android:id="@+id/get_shop_code"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#fb5250"
                android:textSize="@dimen/dimen_24_dip"
                android:text="@string/shop_code_no_hint"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dimen_90_dip"
        android:paddingEnd="@dimen/dimen_90_dip">
        <Button
            android:id="@+id/reg_submit"
            android:text="@string/user_register_btn_text"
            android:textSize="@dimen/dimen_26_dip"
            android:textColor="@color/color_white"
            android:layout_marginTop="@dimen/dimen_50_dip"
            android:layout_width="match_parent"
            android:background="@drawable/common_radius_button"
            android:layout_height="@dimen/dimen_60_dip" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/dimen_30_dip"
        android:paddingRight="@dimen/dimen_30_dip"
        android:layout_marginTop="@dimen/dimen_10_dip"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/dimen_40_dip"
        android:gravity="center_horizontal|bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_46_dip"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:id="@+id/checked_img"
                android:src="@mipmap/pay_selected"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="@dimen/dimen_6_dip"
                android:id="@+id/shop_agreement"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#555555"
                android:textSize="@dimen/dimen_20_dip"
                android:text="@string/shop_agreement" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>