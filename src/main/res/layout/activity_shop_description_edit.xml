<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/common_toolbar_right" />
    <include layout="@layout/line_h_color_e5" />
    <RelativeLayout
        android:layout_marginTop="@dimen/dimen_10_dip"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/dimen_30_dip"
        android:paddingStart="@dimen/dimen_30_dip"
        android:paddingRight="@dimen/dimen_30_dip"
        android:paddingEnd="@dimen/dimen_30_dip"
        android:background="@color/color_white"
        android:layout_height="@dimen/dimen_300_dip">
        <EditText
            android:id="@+id/shop_desc"
            android:layout_width="match_parent"
            android:padding="@dimen/dimen_20_dip"
            android:gravity="top"
            android:maxLength="48"
            android:layout_height="@dimen/dimen_230_dip"
            android:textColor="@color/color_black"
            android:textSize="@dimen/dimen_26_dip"
            android:background="@null"
            android:maxLines="4"
            android:hint="@string/shop_description_hint"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shop_description_left"
            android:text="@string/shop_description_left_hint"
            android:layout_marginBottom="@dimen/dimen_20_dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>