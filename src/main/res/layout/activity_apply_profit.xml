<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3">
    <LinearLayout
        android:id="@+id/toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/common_toolbar" />
        <include layout="@layout/line_h_color_e5" />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/dimen_15_dip"
            android:paddingStart="@dimen/dimen_15_dip"
            android:paddingRight="@dimen/dimen_30_dip"
            android:paddingEnd="@dimen/dimen_30_dip"
            android:background="@color/color_white"
            android:layout_height="@dimen/dimen_96_dip">
            <TextView
                android:layout_width="@dimen/dimen_150_dip"
                android:gravity="center|right"
                android:layout_height="match_parent"
                android:textColor="#555555"
                android:textSize="@dimen/dimen_26_dip"
                android:text="@string/available_balance_profit"/>
            <TextView
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_10_dip"
                android:textColor="#fb5151"
                android:id="@+id/available_balance_profit"
                android:textSize="@dimen/dimen_38_dip"/>
        </LinearLayout>
        <include layout="@layout/line_h_color_e5" />
        <LinearLayout
            android:layout_marginTop="@dimen/dimen_10_dip"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/dimen_15_dip"
            android:paddingStart="@dimen/dimen_15_dip"
            android:paddingRight="@dimen/dimen_30_dip"
            android:paddingEnd="@dimen/dimen_30_dip"
            android:background="@color/color_white"
            android:paddingTop="@dimen/dimen_34_dip"
            android:paddingBottom="@dimen/dimen_34_dip"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="@dimen/dimen_150_dip"
                android:gravity="center|right"
                android:layout_height="match_parent"
                android:textColor="#555555"
                android:textSize="@dimen/dimen_26_dip"
                android:text="@string/drawing_account"/>
            <TextView
                android:id="@+id/drawing_account"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_10_dip"
                android:textColor="#555555"
                android:textSize="@dimen/dimen_26_dip" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/dimen_15_dip"
            android:paddingStart="@dimen/dimen_15_dip"
            android:paddingRight="@dimen/dimen_30_dip"
            android:paddingEnd="@dimen/dimen_30_dip"
            android:background="@color/color_white"
            android:paddingBottom="@dimen/dimen_34_dip"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="@dimen/dimen_150_dip"
                android:gravity="center|right"
                android:layout_height="match_parent"
                android:textColor="#555555"
                android:textSize="@dimen/dimen_26_dip"
                android:text="@string/deposit_bank"/>
            <TextView
                android:id="@+id/deposit_bank"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginLeft="@dimen/dimen_10_dip"
                android:textColor="#555555"
                android:textSize="@dimen/dimen_26_dip" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/dimen_15_dip"
            android:paddingStart="@dimen/dimen_15_dip"
            android:paddingRight="@dimen/dimen_30_dip"
            android:paddingEnd="@dimen/dimen_30_dip"
            android:id="@+id/about_weekday_go"
            android:background="@color/color_white"
            android:paddingBottom="@dimen/dimen_34_dip"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="@dimen/dimen_150_dip"
                android:gravity="center|right"
                android:layout_height="match_parent"
                android:textColor="#555555"
                android:textSize="@dimen/dimen_26_dip"
                android:text="@string/card_no"/>
            <TextView
                android:id="@+id/card_no"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_10_dip"
                android:textColor="#555555"
                android:textSize="@dimen/dimen_26_dip"/>
        </LinearLayout>
        <include layout="@layout/line_h_color_e5" />
        <LinearLayout
            android:layout_marginTop="@dimen/dimen_10_dip"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/dimen_30_dip"
            android:paddingStart="@dimen/dimen_30_dip"
            android:paddingRight="@dimen/dimen_30_dip"
            android:paddingEnd="@dimen/dimen_30_dip"
            android:background="@color/color_white"
            android:paddingTop="@dimen/dimen_24_dip"
            android:paddingBottom="@dimen/dimen_24_dip"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="match_parent"
                android:textColor="#555555"
                android:textSize="@dimen/dimen_26_dip"
                android:text="@string/drawing_hint"/>
            <EditText
                android:id="@+id/edit_profit"
                android:layout_width="match_parent"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:layout_marginTop="@dimen/dimen_24_dip"
                android:layout_height="@dimen/dimen_60_dip"
                android:textColor="#555555"
                android:background="@drawable/edit_profit_bg"
                android:textSize="@dimen/dimen_26_dip"
                android:paddingLeft="@dimen/dimen_20_dip"
                android:paddingRight="@dimen/dimen_20_dip"
                android:hint="@string/drawing_placeholder"/>
        </LinearLayout>

        <include layout="@layout/line_h_color_e5" />
    </LinearLayout>
    <Button
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="#fb5151"
        android:text="@string/confirm"
        android:textColor="@color/color_white"
        android:textSize="@dimen/dimen_32_dip"
        android:layout_height="@dimen/dimen_90_dip" />
</RelativeLayout>