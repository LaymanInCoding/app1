<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3">
    <LinearLayout
        android:id="@+id/title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/common_toolbar" />
        <include
            layout="@layout/line_h_color_e5" />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dimen_90_dip"
            android:paddingBottom="@dimen/dimen_90_dip"
            android:background="@color/color_white"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_70_dip"
                android:textColor="#fb5151"
                android:id="@+id/available_balance"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_24_dip"
                android:textColor="#555555"
                android:text="@string/available_balance"
                android:layout_marginTop="@dimen/dimen_14_dip"/>
        </LinearLayout>
        <include layout="@layout/line_h_color_e5" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/dimen_20_dip"
            android:orientation="vertical">
            <RelativeLayout
                android:paddingLeft="@dimen/dimen_26_dip"
                android:paddingRight="@dimen/dimen_26_dip"
                android:background="@color/color_white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_90_dip">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/dimen_24_dip"
                    android:textColor="#555555"
                    android:text="@string/presenting_profit"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/dimen_24_dip"
                    android:textColor="#555555"
                    android:id="@+id/presenting_profit"/>
            </RelativeLayout>
            <include layout="@layout/line_h_color_e5" />
            <RelativeLayout
                android:paddingLeft="@dimen/dimen_26_dip"
                android:paddingRight="@dimen/dimen_26_dip"
                android:background="@color/color_white"
                android:layout_marginTop="@dimen/dimen_10_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_90_dip">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/dimen_24_dip"
                    android:textColor="#555555"
                    android:text="@string/waiting_profit"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/dimen_24_dip"
                    android:textColor="#555555"
                    android:id="@+id/waiting_profit"/>
            </RelativeLayout>
            <include layout="@layout/line_h_color_e5" />
            <RelativeLayout
                android:paddingLeft="@dimen/dimen_26_dip"
                android:paddingRight="@dimen/dimen_26_dip"
                android:background="@color/color_white"
                android:layout_marginTop="@dimen/dimen_10_dip"
                android:layout_width="match_parent"
                android:id="@+id/presented_profit_container"
                android:layout_height="@dimen/dimen_90_dip">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/dimen_24_dip"
                    android:textColor="#555555"
                    android:text="@string/presented_profit"/>
                <ImageView
                    android:id="@+id/arrow_right1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/arrow_right"/>
            </RelativeLayout>
        </LinearLayout>
        <include layout="@layout/line_h_color_e5" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/apply_profit"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:background="#fb5151"
            android:text="@string/apply_profit"
            android:textColor="@color/color_white"
            android:textSize="@dimen/dimen_32_dip"
            android:layout_height="@dimen/dimen_90_dip" />
    </RelativeLayout>
    <include
        android:id="@+id/loading_anim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_container"
        layout="@layout/loading_anim" />
</RelativeLayout>