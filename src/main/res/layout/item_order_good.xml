<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dimen_30_dip"
    android:paddingRight="@dimen/dimen_30_dip"
    android:paddingTop="@dimen/dimen_20_dip"
    android:background="@color/color_white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_20_dip">
        <ImageView
            android:id="@+id/goods_thumb"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/dimen_150_dip"
            android:layout_height="@dimen/dimen_150_dip" />
        <LinearLayout
            android:layout_marginLeft="@dimen/dimen_20_dip"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/goods_name"
                android:layout_marginTop="@dimen/dimen_20_dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="#555555"
                android:textSize="@dimen/dimen_24_dip"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dimen_24_dip">
                <TextView
                    android:id="@+id/goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="#999999"
                    android:textSize="@dimen/dimen_24_dip"/>
                <TextView
                    android:id="@+id/goods_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_marginLeft="@dimen/dimen_10_dip"
                    android:ellipsize="end"
                    android:textColor="#999999"
                    android:textSize="@dimen/dimen_24_dip"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/line_h_color_e5" />
</LinearLayout>