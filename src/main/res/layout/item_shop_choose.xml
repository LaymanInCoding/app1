<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_marginBottom="@dimen/dimen_10_dip"
              android:layout_height="@dimen/dimen_171_dip"
              android:background="@color/color_white"
              android:orientation="vertical">

    <TextView
        android:id="@+id/shop_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_34_dip"
        android:layout_marginTop="@dimen/dimen_31_dip"
        android:textColor="#333333"
        android:textSize="@dimen/dimen_30_dip"
        tools:text="张三的店"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dip"
        android:layout_marginLeft="@dimen/dimen_24_dip"
        android:layout_marginRight="@dimen/dimen_24_dip"
        android:layout_marginTop="@dimen/dimen_31_dip"
        android:background="@color/color_e5"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80_dip"
        android:orientation="horizontal">

        <LinearLayout
            android:gravity="center"
            android:layout_marginLeft="@dimen/dimen_34_dip"
            android:layout_marginTop="@dimen/dimen_26_dip"
            android:orientation="horizontal"
            android:id="@+id/set_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/default_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/shop_default"/>

            <TextView
                android:id="@+id/default_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20_dip"
                android:text="@string/set_default"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:id="@+id/delete_shop"
            android:layout_marginRight="@dimen/dimen_34_dip"
            android:layout_marginTop="@dimen/dimen_26_dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/shop_delete"/>
            <TextView
                android:layout_marginLeft="@dimen/dimen_20_dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shop_delete"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/edit_shop"
            android:layout_toLeftOf="@id/delete_shop"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginRight="@dimen/dimen_42_dip"
            android:layout_marginTop="@dimen/dimen_26_dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/shop_edit"/>
            <TextView
                android:layout_marginLeft="@dimen/dimen_20_dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shop_edit"/>
        </LinearLayout>

    </RelativeLayout>
    <View android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_10_dip"
        android:background="@color/color_e5"/>

</LinearLayout>


