<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/top_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_400_dip">
        <ImageView
            android:id="@+id/shop_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/index_top_bg"/>
        <com.makeramen.roundedimageview.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/shop_avatar"
            android:layout_width="@dimen/dimen_100_dip"
            android:layout_height="@dimen/dimen_100_dip"
            android:src="@mipmap/mitouxiang"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dimen_30_dip"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dimen_70_dip"
            android:scaleType="centerCrop"
            app:riv_corner_radius="30dip"
            app:riv_border_width="@dimen/dimen_8_dip"
            app:riv_border_color="#88ffffff"
            app:riv_oval="true" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/shop_name_container"
            android:layout_alignTop="@+id/shop_avatar"
            android:layout_marginRight="@dimen/dimen_30_dip"
            android:layout_marginLeft="@dimen/dimen_30_dip"
            android:layout_toRightOf="@+id/shop_avatar"
            android:layout_marginTop="@dimen/dimen_20_dip">
            <TextView
                android:textSize="@dimen/dimen_26_dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:id="@+id/shop_name"
                android:textColor="@color/color_white"
                android:maxLines="1"
                android:shadowColor="#ff000000"
                android:shadowRadius="3"
                android:shadowDx="2"
                android:shadowDy="2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/shop_name_container"
            android:layout_marginLeft="@dimen/dimen_30_dip"
            android:layout_toRightOf="@+id/shop_avatar"
            android:layout_marginRight="@dimen/dimen_30_dip"
            android:layout_marginTop="@dimen/dimen_2_dip">
            <TextView
                android:textSize="@dimen/dimen_24_dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/shop_desc"
                android:ellipsize="end"
                android:textColor="@color/color_white"
                android:maxLines="3"
                android:shadowColor="#ff000000"
                android:shadowRadius="3"
                android:shadowDx="2"
                android:shadowDy="2"/>
        </LinearLayout>
    </RelativeLayout>
    <include layout="@layout/toolbar_my_shop" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dimen_400_dip">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
        <LinearLayout
            android:id="@+id/no_goods_container"
            android:visibility="gone"
            android:background="#f3f3f3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/dimen_200_dip"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/zwsjcp"/>
            <TextView
                android:text="@string/no_goods_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="#666666"
                android:layout_marginTop="@dimen/dimen_40_dip"
                android:textSize="@dimen/dimen_24_dip"/>
        </LinearLayout>
    </RelativeLayout>

    <include
        android:id="@+id/anim_loading"
        android:layout_marginTop="@dimen/dimen_400_dip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/loading_anim" />
</RelativeLayout>
