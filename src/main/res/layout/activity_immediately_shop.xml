<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f3593c"
        android:paddingBottom="@dimen/dimen_100_dip">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/kdm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        android:layout_marginLeft="@dimen/dimen_20_dip"
        android:padding="@dimen/dimen_20_dip">
        <ImageView
            android:layout_width="@dimen/dimen_60_dip"
            android:src="@mipmap/back_tran"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:layout_height="@dimen/dimen_60_dip" />
    </LinearLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_100_dip"
        android:background="@color/color_white">
        <LinearLayout
            android:paddingTop="@dimen/dimen_15_dip"
            android:paddingBottom="@dimen/dimen_15_dip"
            android:paddingLeft="@dimen/dimen_40_dip"
            android:paddingRight="@dimen/dimen_40_dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="小麻包"
                android:textColor="#e06548"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_24_dip"/>
            <TextView
                android:layout_marginTop="@dimen/dimen_3_dip"
                android:text="开店大礼包"
                android:textColor="#e06548"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_24_dip"/>
        </LinearLayout>
        <include layout="@layout/line_v_color_e5" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:paddingRight="@dimen/dimen_30_dip">
            <TextView
                android:id="@+id/immediately_shop"
                android:text="立即开店"
                android:paddingLeft="@dimen/dimen_20_dip"
                android:paddingRight="@dimen/dimen_20_dip"
                android:paddingTop="@dimen/dimen_12_dip"
                android:paddingBottom="@dimen/dimen_12_dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_white"
                android:textSize="@dimen/dimen_24_dip"
                android:background="@drawable/immediately_shop_bg"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>