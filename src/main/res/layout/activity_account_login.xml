<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">
    <include layout="@layout/common_toolbar" />
    <include
        layout="@layout/line_h_color_e5" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_90_dip"
        android:paddingRight="@dimen/dimen_90_dip"
        android:layout_marginTop="@dimen/dimen_70_dip"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_41_dip"
            android:textSize="@dimen/dimen_26_dip"
            android:gravity="center_vertical"
            android:text="@string/user_account"
            android:textColor="@color/color_555"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_41_dip"
            android:layout_marginStart="@dimen/dimen_30_dip"
            android:layout_marginLeft="@dimen/dimen_30_dip"
            android:orientation="vertical">
            <EditText
                android:inputType="phone"
                android:background="@null"
                android:id="@+id/user_account"
                android:maxLength="11"
                android:layout_marginLeft="@dimen/dimen_20_dip"
                android:layout_marginStart="@dimen/dimen_20_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40_dip"
                android:textColor="@color/color_555"
                android:textColorHint="@color/color_db"
                android:hint="@string/user_account_hint"
                android:textSize="@dimen/dimen_26_dip"/>
            <include layout="@layout/line_h_color_e5" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_90_dip"
        android:paddingRight="@dimen/dimen_90_dip"
        android:layout_marginTop="@dimen/dimen_50_dip"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_41_dip"
            android:textSize="@dimen/dimen_26_dip"
            android:text="@string/user_password"
            android:gravity="center_vertical"
            android:textColor="@color/color_555"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_41_dip"
            android:layout_marginStart="@dimen/dimen_30_dip"
            android:layout_marginLeft="@dimen/dimen_30_dip"
            android:orientation="vertical">
            <EditText
                android:background="@null"
                android:id="@+id/user_password"
                android:inputType="textPassword"
                android:layout_marginLeft="@dimen/dimen_20_dip"
                android:layout_marginStart="@dimen/dimen_20_dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40_dip"
                android:textColor="@color/color_555"
                android:textColorHint="@color/color_db"
                android:hint="@string/user_password_hint"
                android:textSize="@dimen/dimen_26_dip"/>
            <include layout="@layout/line_h_color_e5" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_46_dip"
        android:paddingStart="@dimen/dimen_90_dip"
        android:paddingEnd="@dimen/dimen_90_dip"
        android:layout_marginTop="@dimen/dimen_12_dip"
        android:gravity="right|center_vertical">
        <TextView
            android:id="@+id/forget_password"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fb5250"
            android:textSize="@dimen/dimen_28_dip"
            android:text="@string/forget_password"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/dimen_90_dip"
        android:paddingEnd="@dimen/dimen_90_dip">
        <Button
            android:id="@+id/login_submit"
            android:text="@string/user_login_btn_text"
            android:textSize="@dimen/dimen_26_dip"
            android:textColor="@color/color_white"
            android:layout_marginTop="@dimen/dimen_50_dip"
            android:layout_width="match_parent"
            android:background="@drawable/common_radius_button"
            android:layout_height="@dimen/dimen_60_dip" />
    </LinearLayout>
</LinearLayout>