<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#77000000"
    android:paddingRight="@dimen/dimen_50_dip"
    android:paddingLeft="@dimen/dimen_50_dip">
    <ImageView
        android:paddingLeft="@dimen/dimen_15_dip"
        android:paddingRight="@dimen/dimen_15_dip"
        android:id="@+id/qrcode_img"
        android:src="@mipmap/qrcode_test_img"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_below="@+id/qrcode_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/save_qr"
        android:padding="@dimen/dimen_20_dip"
        android:layout_marginTop="@dimen/dimen_10_dip"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/save_gallery"/>
        <TextView
            android:layout_marginLeft="@dimen/dimen_24_dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:text="@string/save_to_gallery"
            android:textSize="@dimen/dimen_28_dip"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/close_qr"
        android:layout_above="@+id/qrcode_img"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_marginBottom="-10dip"
        android:layout_height="wrap_content"
        android:src="@mipmap/qr_close"/>
</RelativeLayout>